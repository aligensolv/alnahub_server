generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// available, product_images,
model Product {
  id         Int    @id @default(autoincrement())
  name       String @unique
  image      String
  
  free_gifts FreeGift[]
  created_at String

  free_gift_counter Int    @default(5)
  client_category_purchases ClientCategoryPurchase[]
}

enum OrderStatus {
  pending
  completed
  verified
  rejected
}


model Order {
  id           Int            @id @default(autoincrement())
  products Json  

  client_id Int
  client    Client @relation(references: [id], fields: [client_id])

  status      OrderStatus
  created_at  String
}

model Client {
  id           Int     @id @default(autoincrement())
  phone_number String  @unique
  orders       Order[]
  gifts PurchaseGift[]
  category_purchases ClientCategoryPurchase[]
  created_at String
}


enum GiftStatus {
  pending
  verified
  rejected
  claimed
}


model PurchaseGift {
  id Int @id @default(autoincrement())
  client_id Int
  client Client @relation(references: [id], fields: [client_id])
  product String
  code String
  status GiftStatus
  created_at String
}

model FreeGift {
  id Int @id @default(autoincrement())
  client String
  product_id Int
  product Product @relation(fields: [product_id], references: [id])
  code String
  status GiftStatus
  created_at String
}

model FriendGift {
  id Int @id @default(autoincrement())
  sender String
  reciever String
  product String
  quantity Int @default(1)
  code String
  status GiftStatus
  created_at String
}

model ClientCategoryPurchase {
  id             Int      @id @default(autoincrement())
  product_id    Int
  product Product @relation(fields: [product_id], references: [id])
  purchase_count Int
  client_id Int
  client Client @relation(fields: [client_id], references: [id])
}

enum SmsType {
  gift
  announcement
}

model Sms {
  id Int @id @default(autoincrement())
  message String
  reciever String
  type SmsType
  created_at String
}

enum RequestStatus {
  pending
  accepted
  rejected
}

model FreeGiftRequest {
  id Int @id @default(autoincrement())
  requested_by String
  requested_at String
  request_status RequestStatus
  product_id Int
  product String
}